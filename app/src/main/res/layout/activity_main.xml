<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">
    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="0dp" android:layout_weight="1">
        <TextView

            android:layout_width="100dp" android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Lemon"
            />
        <EditText
            android:layout_width="100dp" android:id="@+id/d5100" android:maxLength="5"
            android:layout_height="wrap_content"  android:inputType="number"/>
        <Button
            android:id="@+id/save50"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Save" />
    </LinearLayout>
    <Button
        android:id="@+id/entry"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="25dp"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="140dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Make Entry"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/records"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/records"

        android:layout_width="0dp"
        android:layout_height="0dp"


        android:layout_marginBottom="30dp"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="57dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Records"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/signout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entry" />

    <Button
        android:id="@+id/signout"

        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="136dp"
        android:layout_marginEnd="57dp"
        android:layout_marginStart="57dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Sign Out"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/records" />

</android.support.constraint.ConstraintLayout>